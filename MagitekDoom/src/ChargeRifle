//// --------------------------------------------------------------------------
//
// Charge Rifle
//
// --------------------------------------------------------------------------


ACTOR ChargeRifle : MagicBaseSystem
{
	Weapon.AmmoUse1 0
	Weapon.AmmoGive1 40
	Weapon.AmmoUse2 0
	Weapon.AmmoGive2 0
   	Inventory.PickupSound "PLSDRAW"
	Weapon.AmmoType1 "N_Cell"
	Weapon.AmmoType2 "ChargeAmmo"
    	+WEAPON.NOAUTOAIM
	+WEAPON.NOAUTOFIRE
	Inventory.PickupMessage "You got the Charge Rifle!"
	States
	{
	Steady:
	TNT1 A 1
	Goto Ready
	Ready:
        LRIG CBA 1 A_JumpIfInventory("GoFatality", 1, "Steady")
        TNT1 A 0 A_PlaySound("LightRifle/Pick")
        TNT1 AA 0
        TNT1 A 0 A_JumpIfInventory("Kicking",1,"DoKick")
        TNT1 A 0 A_JumpIfInventory("Taunting",1,"Taunt")
		TNT1 A 0 A_JumpIfInventory("Salute1", 1, "MagicAction")
		TNT1 A 0 A_JumpIfInventory("Salute2", 1, "MagicSwap")
		TNT1 A 0 A_JumpIfInventory("MagicTSwap", 1, "MagicSwap2")
        TNT1 A 0 A_JumpIfInventory("Reloading",1,"Reload")
		LRIG A 1 A_WeaponReady
		LRIF A 0 A_TakeInventory("ChargeShot", 999)
		Goto Ready+6
		
	DontNeedToReload:
	Goto Ready+6
	MagicEnd:
		TNT1 A 0
		goto ready+9
	Deselect:
        LRIG ABC 1
		FAST A 0 A_Lower
		Wait
	Select:
	TNT1 A 0 A_Takeinventory("FistsSelected",1)
	TNT1 A 0 A_Takeinventory("SawSelected",1)
	TNT1 A 0 A_Takeinventory("ShotgunSelected",1)
	TNT1 A 0 A_Takeinventory("SSGSelected",1)
	TNT1 A 0 A_Takeinventory("MinigunSelected",1)
	TNT1 A 0 A_Giveinventory("PlasmaGunSelected",1)
	TNT1 A 0 A_Takeinventory("RocketLauncherSelected",1)
    TNT1 A 0 A_Takeinventory("GrenadeLauncherSelected",1)
	TNT1 A 0 A_Takeinventory("BFGSelected",1)
	TNT1 A 0 A_Takeinventory("BFG10kSelected",1)
	TNT1 A 0 A_Takeinventory("RailGunSelected",1)
	TNT1 A 0 A_Takeinventory("SubMachineGunSelected",1)
	TNT1 A 0 A_Takeinventory("RevenantLauncherSelected",1)
	TNT1 A 0 A_Takeinventory("LostSoulSelected",1)
	TNT1 A 0 A_Takeinventory("FlameCannonSelected",1)
	TNT1 A 0 A_Takeinventory("HasBarrel",1)
	
		FAST A 0 A_Raise
		Wait
		
	Spawn:
		LRIP A -1
		Stop
		

	 Fire:
	  TNT1 A 0 A_Takeinventory("Reloading",1)
	  LRIG A 0 A_JumpIfInventory("ChargeAmmo",2,1)
	  Goto Ready+6
	  LRIC A 1
      LRIG A 0 A_Refire
      Goto FireFullCharge
     
	 Hold:
	  TNT1 A 0 A_AlertMonsters (1000)
	  TNT1 A 0 A_JumpIfInventory("Reloading",1,"ZoomCancel")
      LRIG A 0 A_JumpIfInventory("ChargeShot", 40, "FireFullCharge")   //check for full charge
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 30, "ChargeHigh")
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 20, "ChargeMid")
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 10, "ChargeLow")
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 12, 1)
	  TNT1 A 0 A_PlaySound("LightRifle/Charge1",3, .5)
      LRIC A 3 A_GiveInventory("ChargeShot", 4)
      LRIG A 1
      LRIG A 0 A_Refire
	  Goto FireFullCharge
   
	ChargeLow:
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 12, 1)
	  TNT1 A 0 A_PlaySound("LightRifle/Charge2",3, .5)
	  LRIC B 3 A_GiveInventory("ChargeShot", 3)
      LRIG A 1
      LRIG A 0 A_Refire
	  Goto FireFullCharge
	  
	ChargeMid:
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 22, 1)
	  TNT1 A 0 A_PlaySound("LightRifle/Charge3",3, .5)
	  LRIC C 3 A_GiveInventory("ChargeShot", 3)
      LRIG A 1
      LRIG A 0 A_Refire
	  Goto FireFullCharge
	  
	ChargeHigh:
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 32, 1)
	  TNT1 A 0 A_PlaySound("LightRifle/Charge4",3, .5)
	  LRIC D 3 A_GiveInventory("ChargeShot", 2)
      LRIG A 1
      LRIG A 0 A_Refire
	  Goto FireFullCharge
	  
	ZoomCancel:
		LRIG A 4
		TNT1 A 0 A_Takeinventory("Reloading",1)
		Goto Ready+10

    FireFullCharge:
      LRIF B 0 A_JumpIfInventory("ChargeShot", 40, 1)  //full charge?
      Goto FireHighCharge
      LRIF B 0 A_JumpIfInventory("ChargeAmmo", 40, 1)   //don't have enough ammo?
      Goto FireHighCharge
	  TNT1 A 0 A_PlaySound("LightRifle/MegaShot",1)
	  TNT1 A 0 A_AlertMonsters(3000)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("Alerter")
      LRIF E 1 A_FireCustomMissile("FusionBlast", 0, 1, 0, 0)
	  LRIF E 0 A_SetAngle(frandom(7.5, -7.5) + angle)
	  LRIF E 0 A_SetPitch(frandom(-9, -7) + pitch)
      LRIF E 8 A_TakeInventory("ChargeAmmo", 40)
      LRIF ABC 10
      LRIF B 0 A_TakeInventory("ChargeShot",999)
      Goto Reload

    FireHighCharge:
      LRIF B 0 A_JumpIfInventory("ChargeShot", 30, 1) //is the gun charged enough?
      Goto FireMidCharge
      LRIF A 0 A_JumpIfInventory("ChargeAmmo", 20, 1)  //Enough ammo?
      Goto FireMidCharge
	  TNT1 A 0 A_PlaySound("LightRifle/StrongShot",1)
	  LRIF A 0 A_FireCustomMissile("RailTrail", 0, 0, -1, 0)
	  TNT1 A 0 A_AlertMonsters(2500)
      LRIF A 2 A_RailAttack (600, 0, 1, "00 40 00", "700 900 700", RGF_SILENT, 1, "SuperRailPuff")
	  TNT1 A 0 A_SetAngle(frandom(3.5, -3.5) + angle)
	  TNT1 A 0 A_SetPitch(frandom(-7, -5) + pitch)
      LRIF A 0 A_TakeInventory("ChargeAmmo", 20)
      LRIF BC 2
      LRIF A 0 A_TakeInventory("ChargeShot", 999)
      Goto Ready + 8
	  
	FireMidCharge:
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 20, 1) //is the gun charged enough?
      Goto FireLowCharge
      LRIF A 0 A_JumpIfInventory("ChargeAmmo", 10, 1)  //Enough ammo?
      Goto FireLowCharge
	  TNT1 A 0 A_PlaySound("LightRifle/MidShot",1)
	  TNT1 A 0 A_AlertMonsters(2000)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("AlerterMidChance")
      LRIF A 1 BRIGHT A_FireCustomMissile("MidPlasShot", 0, 1, 0, 0)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("SpiralShot", 0, 1, 0, 20)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("SpiralShot2", 0, 1, 0, 20)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("SpiralShot3", 0, 1, 0, 20)
	  LRIF A 1 BRIGHT A_FireCustomMissile("MidPlasShot", 0, 1, 0, 0)
	  LRIF A 1 BRIGHT A_FireCustomMissile("MidPlasShot", 0, 1, 0, 0)
	  LRIF B 2 BRIGHT
	  TNT1 A 0 A_SetAngle(frandom(1.5, -1.5) + angle)
	  TNT1 A 0 A_SetPitch(frandom(-3, -1) + pitch)
	  LRIF A 0 A_TakeInventory("ChargeAmmo", 10)
      LRIF C 2
	  LRIF A 0 A_TakeInventory("ChargeShot", 999)
      Goto Ready + 8
	  
	FireLowCharge:
	  LRIF B 0 A_JumpIfInventory("ChargeShot", 10, 1) //is the gun charged enough?
      Goto FireNoCharge
      LRIF A 0 A_JumpIfInventory("ChargeAmmo", 5, 1)  //Enough ammo?
      Goto FireNoCharge
	  TNT1 A 0 A_AlertMonsters(1500)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("AlerterLowChance")
	  TNT1 A 0 A_PlaySound("LightRifle/RapidShot",1)
      LRIF A 0 A_FireCustomMissile("PlasmaVolley", 3, 0, -1, 0)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 0, 0, -1, 12)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 0, 0, -1, -12)
	  LRIF A 1 A_FireCustomMissile("PlasmaVolley", -3, 0, -1, 0)
	  TNT1 A 0 A_SetAngle(frandom(0.9, -0.9) + angle)
	  TNT1 A 0 A_SetPitch(frandom(-2, -0) + pitch)
	  LRIF BC 1
	  TNT1 A 0 BRIGHT A_FireCustomMissile("AlerterLowChance")
	  TNT1 A 0 A_PlaySound("LightRifle/RapidShot",1)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 3, 0, -1, 0)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 0, 0, -1, 12)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 0, 0, -1, -12)
	  LRIF A 1 A_FireCustomMissile("PlasmaVolley", -3, 0, -1, 0)
	  TNT1 A 0 A_SetAngle(frandom(0.9, -0.9) + angle)
	  TNT1 A 0 A_SetPitch(frandom(-2, -0) + pitch)
	  LRIF BC 1
	  TNT1 A 0 BRIGHT A_FireCustomMissile("AlerterLowChance")
	  TNT1 A 0 A_PlaySound("LightRifle/RapidShot",1)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 3, 0, -1, 0)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 0, 0, -1, 12)
	  LRIF A 0 A_FireCustomMissile("PlasmaVolley", 0, 0, -1, -12)
	  LRIF A 1 A_FireCustomMissile("PlasmaVolley", -3, 0, -1, 0)
	  TNT1 A 0 A_SetAngle(frandom(0.9, -0.9) + angle)
	  TNT1 A 0 A_SetPitch(frandom(-2, -0) + pitch)
	  LRIF BC 1
      LRIF A 2 A_TakeInventory("ChargeAmmo", 5)
      LRIF BC 2
      LRIF A 0 A_TakeInventory("ChargeShot", 999)
      Goto Ready + 8
	  
	FireNoCharge:
	  LRIF A 0 A_JumpIfInventory("ChargeAmmo", 2, 1)  //Enough ammo?
      Goto Ready
	  TNT1 A 0 A_PlaySound("LightRifle/BasicShot",3, .5)
	  TNT1 A 0 A_AlertMonsters(1000)
	  TNT1 A 0 BRIGHT A_FireCustomMissile("AlerterMidChance")
	  TNT1 A 0 A_SetAngle(frandom(0.7, -0.7) + angle)
	  TNT1 A 0 A_SetPitch(frandom(-1, 0) + pitch)
	  LRIF A 0 A_FireCustomMissile("WeakPlasma")
	  LRIF A 2 A_TakeInventory("ChargeAmmo", 2)
      LRIF B 2 
	  LRIF A 0 A_TakeInventory("ChargeShot", 999)
	  LRIF CCCCCC 1 A_Refire
      Goto Ready + 8

	AltFire:
        TNT1 A 0 A_JumpIfInventory("Reloading",1,"Reload")
        TNT1 A 0 A_JumpIfInventory("ChargeAmmo",1,2)
        Goto Ready+6
        TNT1 AAAA 0
		TNT1 A 0 A_AlertMonsters (1000)
		TNT1 A 0 A_JumpIfInventory("IsHasted",1,"HasteAltFire")
		LRIF E 1 BRIGHT A_Takeinventory("ChargeAmmo",1)
		LRIF A 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		LRIF E 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 A_Takeinventory("ChargeAmmo",1)
		LRIF A 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		LRIF B 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 A_ReFire
        TNT1 A 0 A_PlaySound("PLSCOOL")
		LRIF BBBBBBB 1
		LRIF CCCCCCC 3 A_FireCustomMissile("SmokeSpawner",0,0,0,5)
        TNT1 A 0 A_PlaySound("BEPBEP")
		Goto Ready+6
	HasteAltFire:
		TNT1 A 0 A_Takeinventory("ChargeAmmo",1)
		LRIF E 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 E 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		LRIF A 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 E 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 A_Takeinventory("ChargeAmmo",1)
		LRIF E 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 E 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		LRIF A 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 E 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 A_Takeinventory("ChargeAmmo",1)
		LRIF E 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		LRIF A 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 E 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 A_Takeinventory("ChargeAmmo",1)
		LRIF E 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		LRIF A 1 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 E 0 BRIGHT A_FireCustomMissile("HotPlasmaGas", random(4, -4), 1, random(5, -5), random(5, -5), 0, random(4, -4))
		TNT1 A 0 A_ReFire
        TNT1 A 0 A_PlaySound("PLSCOOL")
		LRIF BBB 1
		LRIF CCC 3 A_FireCustomMissile("SmokeSpawner",0,0,0,5)
        TNT1 A 0 A_PlaySound("BEPBEP")
		Goto Ready+6


    Reload:
	    LRIG A 1 A_WeaponReady
		TNT1 A 0 A_Takeinventory("Zoomed",1)
        TNT1 A 0 A_ZoomFactor(1.0)
        TNT1 A 0 A_Takeinventory("Reloading",1)
		TNT1 A 0 A_JumpIfInventory("ChargeAmmo",40,"DontNeedToReload")
        TNT1 A 0 A_PlaySound("LightRifle/Charge4",3, .5)
		LRIG A 0 A_TakeInventory("ChargeShot", 999)
        TNT1 A 0 A_JumpIfInventory("N_Cell",1,3)
        Goto Ready+6
        TNT1 AAAA 0
       

        
		TNT1 A 0 A_PlaySound("PLREADY")
		LRIR AB 3 
		TNT1 A 0 A_FireCustomMissile("PlasmaCaseSpawn",-30,0,-4,-4)
		LRIR CD 3
		LRIR E 8
		LRIR EFGHIJKL 2

		FinishReload:
		TNT1 AAAAAAAAAA 0
		TNT1 A 0 A_JumpIfInventory("ChargeAmmo",40,15)
		TNT1 A 0 A_JumpIfInventory("N_Cell",1,3)
		Goto Ready+6
        TNT1 AAAAAA 0
		TNT1 A 0 A_Giveinventory("ChargeAmmo",1)
		TNT1 A 0 A_Takeinventory("N_Cell",1)
		Goto FinishReload
		TNT1 AAAAAAAA 0
		
		TNT1 A 0 A_Takeinventory("Reloading",1)
        TNT1 A 0 A_PlaySound("BEPBEP")
        Goto Ready+6
	}
}


/*/
/ / Ammo types
/*/
ACTOR ChargeAmmo : Ammo
{
	+INVENTORY.IGNORESKILL
	Inventory.MaxAmount 40
}

ACTOR ChargeShot : Inventory
{
   Inventory.MaxAmount 40
}

/*/
/ / Projectiles
/*/

ACTOR WeakPlasma
{
  height 5
  radius 5
  damage (10)
  speed 60
  Scale .8
  DamageType PlasmaBall
  PROJECTILE
  BounceType "Hexen" 
  +USEBOUNCESTATE
  BounceCount 6
  WallBounceFactor 0.7
  BounceFactor 0.8
  BounceSound "LightRifle/BasicDie"
  DeathSound "LightRifle/BasicDie"
  Decal "Scorch"
  +CANBOUNCEWATER
  species "Marines"
+THRUSPECIES
+DONTHURTSPECIES
     States
   {
    Spawn:
      PLS1 A 1 Bright Light ("PLSGREENSMALL")
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  PLS1 A 1 Bright Light ("PLSGREENSMALL")
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
      Loop
    Death:
	  TNT1 A 0 A_CustomMissile ("PlasmaBoom", 0, 0)
	  TNT1 A 0 A_CustomMissile ("GreenPLSBoom", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSBoom2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSBoom2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark2", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark2", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark2", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark3", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark3", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark3", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark3", 0, 0, random (0, 360), 2 | 4, random (10, 50))
      PLS1 CDEFG 1 Bright Light ("PLSBOOMSMALL")
      Stop
	Bounce.Actor:
		Goto Death
   }
}

ACTOR PlasmaBoom: KickAttack
{
Damage 0
Speed 0
Radius 1
damageType "Plasma"
States
{
	Spawn:
		TNT1 A 0
		TNT1 A 1 A_Explode(60, 50, false, 0, 50)
		Stop
	Death:
		TNT1 A 0
		Stop
	XDeath:
	    TNT1 A 0
		Stop
}
}


ACTOR PlasmaVolley
{
  height 3
  radius 3
  damage (20)
  speed 60
  Scale .7
  DamageType Plasma
  PROJECTILE
  DeathSound "LightRifle/BasicDie"
  Decal "Scorch"
  species "Marines"
+THRUSPECIES
+DONTHURTSPECIES
   States
   {
    Spawn:
      PLS1 A 1 Bright Light ("PLSGREENSMALL")
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  PLS1 A 1 Bright Light ("PLSGREENSMALL")
	  TNT1 A 0 A_CustomMissile ("GreenLRIFlame2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
      Loop
    Death:
	  TNT1 A 0 A_CustomMissile ("GreenPLSBoom2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark2", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark2", 0, 0, random (0, 360), 2 | 4, random (10, 50))
	  TNT1 A 0 A_CustomMissile ("GreenPLSSpark3", 0, 0, random (0, 360), 2 | 4, random (10, 50))
      PLS1 CDEFG 1 Bright Light ("PLSBOOMSMALL")
      Stop
   }
}

actor MidPlasShot
{
  height 7
  radius 7
  damage (50)
  speed 30
  DamageType "Plasma"
  renderstyle Add
  alpha .7
  Scale 1.2
  PROJECTILE
  BounceType "Doom" 
  BounceFactor 1.0
  WallBounceFactor 1.0
  reactionTime 60
  +CANBOUNCEWATER
  species "Marines"
+THRUSPECIES
+DONTHURTSPECIES
  states
  {
  Spawn:
	PLS1 A 1 Bright Light ("PLSGREENMID") A_CustomMissile ("GreenLRIFlame2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	PLS1 B 1 Bright Light ("PLSGREENMID") A_CustomMissile ("GreenLRIFlame", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	Goto Reg
  Reg:
    PLS1 A 1 Bright Light ("PLSGREENMID")
	TNT1 A 0 A_CustomMissile ("GreenLRIFlame2", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	PLS1 B 1 Bright Light ("PLSGREENMID")
	TNT1 A 0 A_CustomMissile ("GreenLRIFlame", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
	TNT1 A 0 A_Countdown
    Loop
  Death:
    PLS1 CDEFG 2 Bright Light ("PLSBOOMMID")
    stop
  XDeath:
	TNT1 A 0 A_PlaySound("LightRifle/Primary",3)
