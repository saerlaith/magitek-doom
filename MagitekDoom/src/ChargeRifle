ACTOR ExtraPlasma: FastProjectile
{
  height 15
  radius 15
  damage (0)
  speed 2
  Scale .4
  DamageType Plasma
  PROJECTILE
  +NODAMAGETHRUST
  Translation "0:255=%[0.1,0.3,0.1]:[1.5,2,1.5]"
  species "Marines"
+THRUSPECIES
+DONTHURTSPECIES
  DeathSound "LightRifle/BasicDie"
     States
   {
    Spawn:
      MIRR ACDE 2 Bright Light ("PLSGREENSMALL") 
	  TNT1 A 0 A_ChangeVelocity(velx*1.2, vely*1.2, velz*1.2, CVF_REPLACE)
      Loop
    Death:
      TNT1 A 0 A_Explode(50, 100, false)
	  TNT1 A 0 A_CustomMissile ("GreenPlasmaFireBreak", 0, 0, random (0, 360), 2 | 4, random (-50, 50))
      Stop
   }
}

Actor GreenPlasmaGas
{
	Projectile
  +NoGravity
  -DOOMBOUNCE
  -NOCLIP
  -NOBLOCKMAP
  Damage (2)
  Damagetype Stun
  RenderStyle Add
  Scale 0.3
  Alpha 0.9
  Speed 20
  -NOGRAVITY
  Gravity 0.2
  +RIPPER
  +NOEXTREMEDEATH
  +DONTGIB
  +THRUGHOST
  +NODAMAGETHRUST
  Decal "Scorch"
  SeeSound "PLSTHRW"
  DeathSound "imp/shotx"
  Radius 10
  Height 5
  +THRUGHOST
  Translation "0:255=%[0,0,0]:[1.0,2.0,1.0]"
  species "Marines"
+THRUSPECIES
+DONTHURTSPECIES
  States
  {
  Spawn:
    FIR5 A 1 BRIGHT
	FIR5 BBCCDDEEFFGGHHIIJJKKLLMMNNOOPP 1 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 AAA 0 A_CustomMissile ("GreenPlasmaFireBreak", 0, 0, random (0, 360), 2, random (0, 360))
	Stop
  Death:
	TNT1 A 0
	TNT1 A 0 A_Explode (15, 50, false, 0, 50)
	TNT1 AAA 0 A_CustomMissile ("GreenPlasmaFireBreak", 0, 0, random (0, 360), 2, random (0, 360))
	FIR5 CEHJLNP 1 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
    Stop
  XDeath:
	FIR5 CEHJLNP 1 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
    Stop
  }
}

Actor HotPlasmaGas
{
	Projectile
  +NoGravity
  -DOOMBOUNCE
  -NOCLIP
  -NOBLOCKMAP
  Damage (10)
  Damagetype GreenFlames
  RenderStyle Add
  Scale 0.3
  Alpha 0.9
  Speed 30
  +RIPPER
  -NOGRAVITY
  Gravity 0.2
  +NOEXTREMEDEATH
  +THRUGHOST
  +NODAMAGETHRUST
  +PAINLESS
  Decal "Scorch"
  SeeSound "PLSTHRW"
  DeathSound "imp/shotx"
  Radius 10
  Height 5
  +THRUGHOST
  species "Marines"
  +THRUSPECIES
  Translation "0:255=%[0,0,0]:[0.5,2,0.5]"
  States
  {
  Spawn:
    FIR5 A 1 BRIGHT
	FIR5 BBCCDDEEFFGGHHIIJJKKLLMMNNOOPP 1 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 AAA 0 A_CustomMissile ("GreenPlasmaFireBreak", 0, 0, random (0, 360), 2, random (0, 360))
	Loop
  Death:
	TNT1 A 0
	TNT1 A 0 A_ChangeFlag("NOGRAVITY", 1)
	TNT1 AAA 0 A_CustomMissile ("GreenPlasmaFireBreak", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 BC 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 DE 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 FG 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 HI 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 JK 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 LM 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 NO 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 A 0 A_Explode (2, 50, false, 0, 50)
	FIR5 PQ 2 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
    Stop
  XDeath:
	FIR5 CEHJLNP 1 Bright A_CustomMissile ("GreenPlasmaFireMove", 0, 0, random (0, 360), 2, random (0, 360))
    Stop
  }
}
