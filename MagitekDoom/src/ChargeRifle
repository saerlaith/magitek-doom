actor SpiralShot
{
  height 7
  radius 7
  damage (50)
  speed 30
  DamageType "PlasmaBall"
  renderstyle Add
  alpha .7
  Scale 0.5
  PROJECTILE
  BounceType "Doom" 
  BounceFactor 1.0
  WallBounceFactor 1.0
  reactionTime 30
  +CANBOUNCEWATER
  species "Marines"
+THRUSPECIES
+DONTHURTSPECIES
  states
  {
  Spawn:
	TNT1 A 0
	Goto Reg
  Reg:
    PBAL C 1 Bright A_BishopMissileWeave
	TNT1 A 0 A_CustomMissile("SpiralTrail",0,0,0)
	PBAL C 1 Bright A_BishopMissileWeave
	TNT1 A 0 A_CustomMissile("SpiralTrail",0,0,0)
	TNT1 A 0 A_Countdown
    Loop
  Death: XDeath: Crash:
	TNT1 B 0
	TNT1 A 0 A_CustomMissile ("PlasmaBoom", 0, 0)
	TNT1 A 0 A_CustomMissile ("GreenPlasmaFire", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 AAAAA 0 A_CustomMissile ("GreenPlasmaParticle", 0, 0, random (0, 360), 2, random (0, 360))
	TNT1 B 4	
	TNT2 AAAAAAAAA 4 A_CustomMissile ("PlasmaSmoke", 1, 0, random (0, 360), 2, random (0, 160))
	Stop
  }
}

